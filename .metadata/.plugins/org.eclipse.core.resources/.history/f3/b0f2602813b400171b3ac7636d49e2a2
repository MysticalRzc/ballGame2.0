public class test {
	public Object lock;
	public static boolean run;

	public static void main(String[] args) {
		
		run = true;
		
	}

	public void thread() {
		Thread th = new Thread() {
			@Override
			public void run() {
				synchronized (lock) {
					while (true) {
						if (run)
							System.out.println(">");
						else
							try {
								lock.wait();
							} catch (InterruptedException e) {
								e.printStackTrace();
							}
						try {
							Thread.sleep(100);
						} catch (InterruptedException e) {
							e.printStackTrace();
						}
					}
				}
			}
		};
		th.start();
	}

}