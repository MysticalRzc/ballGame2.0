package communication.tcpCommunication;


public class TcpCommunnication{
	
	public Thread reTh;
	public Thread seTh;
	
	public TcpCommunnication() {
		this.reTh = new Thread(new TcpReceiveThread(),"receiveThread");
		this.seTh = new Thread(new TcpSendThread("127.0.0.1", 30000),"sendThread");
	}
	
	public void receive(){
		reTh.start();
	}
	
	public void send(String str)
	{
		seTh.start();
	}
}
