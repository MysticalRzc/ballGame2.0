public class test {
	public Object lock;
	public static boolean run;

	public static void main(String[] args) {
		run = true;
	}

	public void thread() {
		Thread th = new Thread() {
			@Override
			public void run() {
				synchronized (lock) {
					while (true) {
						if (run)
							System.out.println(">");
						else
							lock.wait();
					}
				}
			}
		};
	}

}